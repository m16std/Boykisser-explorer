<Window x:Class="Boykisser_explorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Boykisser_explorer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnBack" Content="◀" Click="btnBack_Click" HorizontalAlignment="Left" Margin="5,2,0,0" VerticalAlignment="Top" Width="25" Height="25"/>
        <Button x:Name="btnForward" Content="▶" Click="btnForward_Click" HorizontalAlignment="Left" Margin="50,2,0,0" VerticalAlignment="Top" Width="25" Height="25"/>
        <Button x:Name="btnOpen" Content="Open" Click="btnOpen_Click" HorizontalAlignment="Right" Margin="0,2,10,0" VerticalAlignment="Top" Width="35" Height="25"/>
        <Label Content="Path:" HorizontalAlignment="Left" Margin="95,2,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPath" HorizontalAlignment="Stretch" Margin="135,6,55,0" TextWrapping="Wrap" Text="C:\" VerticalAlignment="Top" />
        <WebBrowser x:Name="webBrowser" Margin="0,30,0,0" Source="C:\"/>
    </Grid>
</Window>
